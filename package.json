{
  "name": "clothing-cluster",
  "version": "0.1.0",
  "private": true,
  "description": "服の組み合わせ管理Webアプリケーション",
  "scripts": {
    "prepare": "husky || true",
    "dev": "moon run web:dev",
    "build": "moon run web:build",
    "db:generate": "moon run db:generate",
    "db:migrate": "moon run db:migrate",
    "db:studio": "moon run db:studio"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "devDependencies": {
    "@moonrepo/cli": "^1.30.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "apps/web/src/!(components/ui)/**/*.{ts,tsx}": [
      "pnpm --filter web exec biome check --write --unsafe"
    ],
    "apps/web/src/!(components)/*.{ts,tsx}": [
      "pnpm --filter web exec biome check --write --unsafe"
    ],
    "packages/**/*.{ts,tsx}": [
      "pnpm exec biome check --write --unsafe"
    ],
    "*.{json,yml,yaml}": [
      "pnpm --filter web exec biome format --write"
    ]
  }
}
